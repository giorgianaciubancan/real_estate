<h1 class="h3">Meetings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.start_time.in_time_zone("Bucharest").strftime("Date: %F Time: %T") %></td>
        <td><%= meeting.end_time.in_time_zone("Bucharest").strftime("Date: %F Time: %T") %></td>
        <td><%= link_to 'Show', meeting, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting), class: "btn btn-success" %></td>
        <td><%= button_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meeting', new_meeting_path, class: "btn btn-success" %>



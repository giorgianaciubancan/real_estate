
<h1 class="h3">Posts</h1>
<table class="table table-striped">
  <thead>
      <th>Title</th>
      <th>Summary</th>
      <th colspan="3"></th>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>  
        <td><%= post.summary %></td>
        <td><%= link_to 'Show', post ,class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_post_path(post),class: "btn btn-success"  %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-success"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path ,class: "btn btn-success" %>
